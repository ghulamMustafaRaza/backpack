{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"],
      "env": [
        "BACKPACK_CONFIG_VERSION",
        "BACKPACK_CONFIG_LOG_LEVEL",
        "BACKPACK_FEATURE_LIGHT_MODE",
        "BACKPACK_FEATURE_POP_MODE"
      ]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["^build"]
    }
  },
  "globalDependencies": [".env"]
}
